<h1>Список статей</h1>
 
<h2><%= link_to 'Новая статья', new_article_path %></h2> 

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.text %></td>
    <td><%= link_to 'Показать', article_path(article) %></td>
    <td><%= link_to 'Редактировать', edit_article_path(article) %></td>
	<td><%= link_to 'Удалить', article_path(article),
                    method: :delete, data: { confirm: 'Вы уверены?' } %></td>
  </tr>
<% end %>
</table>
